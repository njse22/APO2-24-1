<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demofx.control.HelloController">
    <VBox >
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label fx:id="nameLabel" text="Name"/>
        <TextField fx:id="nameTextField"></TextField>

        <Label fx:id="ageLabel" text="Age"/>
        <TextField fx:id="ageTextField"></TextField>

        <Button fx:id="addPersonButton" text="Agregar" onAction="#onAddPerson"/>
    </VBox>
    <VBox>
        <Label fx:id="listPersonLabel" text="label en la segunda VBox"></Label>
    </VBox>
</HBox>
